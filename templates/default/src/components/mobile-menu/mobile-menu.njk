{% macro mobileMenu(args) %}
	<div class="mobile-menu js-mobile-menu">
		{% if args.showAuth %}
			<div class="mobile-menu__account">
				<div class="mobile-menu__person">
					{% include "account-person/account-person.njk" %}
				</div>
				<div class="mobile-menu__logout-btn">
					{% include "logout-btn/logout-btn.njk" %}
				</div>
			</div>
		{% else %}
			<div class="mobile-menu__sign-in-btn">
				{% include "sign-in-btn/sign-in-btn.njk" %}
			</div>
		{% endif %}
		
		<div class="mobile-menu__lots">
			<div class="mobile-menu__lots-title js-mobile-menu__lots-title">
				<span>Текущие торги</span>
			</div>
			<nav class="mobile-menu__lots-nav js-mobile-menu__lots-nav">
				<ul class="mobile-menu__lots-list">
					<li class="mobile-menu__lots-item">
						<a href="#" class="mobile-menu__lots-link active">Все лоты</a>
					</li>
					<li class="mobile-menu__lots-item">
						<a href="#" class="mobile-menu__lots-link">Легковые автомобили</a>
					</li>
					<li class="mobile-menu__lots-item">
						<a href="#" class="mobile-menu__lots-link">Грузовики</a>
					</li>
					<li class="mobile-menu__lots-item">
						<a href="#" class="mobile-menu__lots-link">Погрузчики</a>
					</li>
					<li class="mobile-menu__lots-item">
						<a href="#" class="mobile-menu__lots-link">Автобусы</a>
					</li>
					<li class="mobile-menu__lots-item">
						<a href="#" class="mobile-menu__lots-link">Сельскохозяйственная техника</a>
					</li>
				</ul>
			</nav>
		</div>
		<div class="mobile-menu__menu">
			<ul class="mobile-menu__menu-list">
				{% if args.showAuth %}
					<li class="mobile-menu__menu-item">
						<a href="#" class="mobile-menu__menu-link">
							<i class="icon-star mobile-menu__menu-icon"></i>
							<span>Избранные лоты</span>
						</a>
					</li>
				{% endif %}

				<li class="mobile-menu__menu-item">
					<a href="#" class="mobile-menu__menu-link">
						<i class="icon-calendar mobile-menu__menu-icon"></i>
						<span>Календарь торгов</span>
					</a>
				</li>
				<li class="mobile-menu__menu-item">
					<a href="#" class="mobile-menu__menu-link">
						<i class="icon-account mobile-menu__menu-icon"></i>
						<span>Личный кабинет</span>
					</a>
				</li>
				<li class="mobile-menu__menu-item">
					<a href="#" class="mobile-menu__menu-link">
						<i class="icon-question mobile-menu__menu-icon"></i>
						<span>FAQ</span>
					</a>
				</li>
			</ul>
		</div>
		<div class="mobile-menu__footer">
			<div class="mobile-menu__copyright">© 2023 АвтоТорги.</div>
			<div class="mobile-menu__privacy">
				<a href="#">Пользовательское соглашение</a>
			</div>
		</div>
	</div>
{% endmacro %}