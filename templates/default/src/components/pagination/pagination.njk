<div class="pagination">
    <button type="buttom" class="pagination__load-more">Показать ещё</button>
    <ul class="pagination__list">
        {% for index in range(1, 8) %}
            <li class="pagination__item {% if index > 4 and loop.last === false %}pagination__item_hide-mob{% endif %}">
                <a href="#" class="pagination__link {% if index === 1 %}active{% endif %}">{{ index }}</a>
            </li>
        {% endfor %}
        <li class="pagination__item">
            <span class="pagination__dotted">...</span>
        </li>
        <li class="pagination__item">
            <a href="#" class="pagination__link">57</a>
        </li>
    </ul>
    <div class="pagination__show-count">
        <div class="pagination__show-count-title">Кол-во на странице:</div>
        <div class="pagination__show-count-box">
            {{ selectBox({
                "name": "show-count",
                "disabled": false,
                "multiple": false,
                "options": [
                    "10",
                    "25",
                    "50",
                    "100"
                ]
            }) }}
        </div>
    </div>
</div>